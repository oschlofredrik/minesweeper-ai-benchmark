{
  "builds": [
    {
      "src": "packages/api/*.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "packages/api/index.py": {
      "maxDuration": 30
    },
    "packages/api/leaderboard_optimized.py": {
      "maxDuration": 10
    },
    "packages/api/play_optimized.py": {
      "maxDuration": 60
    },
    "packages/api/game_runner.py": {
      "maxDuration": 300
    },
    "packages/api/evaluate-sdk.py": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/api/leaderboard",
      "destination": "/packages/api/leaderboard_optimized.py"
    },
    {
      "source": "/api/leaderboard/(.*)",
      "destination": "/packages/api/leaderboard_optimized.py"
    },
    {
      "source": "/api/play",
      "destination": "/packages/api/play_optimized.py"
    },
    {
      "source": "/api/play/(.*)",
      "destination": "/packages/api/play_optimized.py"
    },
    {
      "source": "/api/benchmark/(.*)",
      "destination": "/packages/api/play_optimized.py"
    },
    {
      "source": "/api/games/(.*)",
      "destination": "/packages/api/game_runner.py"
    },
    {
      "source": "/api/evaluate",
      "destination": "/packages/api/evaluate-sdk.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "/packages/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/api/index.py"
    }
  ],
  "env": {
    "DB_POOL_SIZE": "5",
    "DB_TIMEOUT": "30",
    "CACHE_TTL": "300",
    "LEADERBOARD_CACHE_TTL": "60",
    "LEADERBOARD_BATCH_SIZE": "10",
    "LEADERBOARD_UPDATE_INTERVAL": "30"
  }
}